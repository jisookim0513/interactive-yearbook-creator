<div class="top" style="text-align: center">
    <h1>
        <!-- <i class="fa fa-facebook-official"></i>
         <i class="fa fa-book"></i> -->
        Interactive Yearbook Creator 
    </h1>
    <hr>
</div>


<%= form_for @job, url: {action: "create", controller: 'jobs'}, html: {class: "upload_form"} do |f| %>
    <div id="email">
        <%= f.text_field :email, class: 'text_field', placeholder: 'Your email' %>
    </div>
    <div id="extra-info">
        <%= f.text_field :info, class: 'text_field', placeholder: 'Extra info' %>
    </div>
    <div class="fileUpload btn btn-primary">
        <span>Upload file <span class="fa fa-upload"></span></span>
        <input id="job_file2" type="file" class="upload" name="job[file]" onchange="onChange(this.files[0])"/>
    </div>
    <span id="uploadFile">Choose file</span>
    <br/>
    <div id="upload-file">
        <%=  f.file_field :file %>
    </div>
    <div class="col-xs-2 col-xs-offset-5">
        <%= f.submit "Make it Interactive", class:"btn btn-block btn-primary" %>
    </div>
<% end %>
